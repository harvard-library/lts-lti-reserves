<%# display information we have about a reserve, modulo the editable stuff %>

<% if reserve.chapter? %>
   <%= render partial: 'reserves/chapter_auth_title', locals: {:reserve => reserve} %>
<% else %>
   <% if reserve.author %>
    <span class="author"><%= reserve.author %></span>
    <% else %>
    <span class="author"></span>
   <% end %>
   <span class="title"><%= reserve.title %><% if !reserve.title.ends_with?('.') %>.<% end %></span>
   <% if reserve.editor %>
    <span class="editor"><%= reserve.editor %> [ed.]</span>
   <% end %>
   <%= reserve.non_journal_info %>

<% end %>

