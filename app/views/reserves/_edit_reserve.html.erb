
<%= simple_form_for @reserve, url: reserve_path, as: 'reserve', html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean
  } do |f| %>
<%= f.error_notification %>
<%= f.input :citation_request_id, as: :hidden %>
<%= f.input :instance_id, as: :hidden%>
<input type="hidden" id="o_estimated_enrollment" name="o_estimated_enrollment" value="<%=reserve.estimated_enrollment%>" />
<input type="hidden" id="o_student_annotation" name="o_student_annotation" value="<%=reserve.student_annotation %>"/>
<input type="hidden" id="o_lecture_date" name="o_lecture_date" value="<%=reserve.lecture_date %>" />
<input type="hidden" id="o_required" name="o_required" value="<%=reserve.required %>" />
<input type="hidden" id="o_visibility" name="o_visibility" value="<%=reserve.visibility %>" />
<input type="hidden" id="iso_date" name="iso_date" value=""/>
<%= f.input :estimated_enrollment, placeholder: 'Estimated enrollment', required: false %>

<%= f.input :student_annotation, as: :text, placeholder: 'This is displayed to students when they look at the Reading List', label: 'Note to students', required: false  %>
<%= f.input :lecture_date, label: 'Lecture date', required: false, placeholder: 'DD/MM/YYYY',
input_html: { class: 'datepicker' }   %>
<%= f.input :required, label: 'Required Reading', as: :boolean, checked_value: 'Y', unchecked_value: 'N' %>
<%= f.input :visibility, label: 'Visible to Student', as: :boolean, checked_value: 'P', unchecked_value: 'R' %>
<%= f.button :submit, class: "btn btn-submit" %>


<% end %>
