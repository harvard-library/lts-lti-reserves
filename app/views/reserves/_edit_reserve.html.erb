
<%= simple_form_for @reserve, url: reserve_path, as: 'reserve', html: { class: 'form-horizontal' },
  wrapper: :horizontal_form,
  wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean
  } do |f| %>
<%= f.error_notification %>
<%= f.input :citation_request_id, as: :hidden %>
<%= f.input :instance_id, as: :hidden%>
<input type="hidden" id="title" name="title" value="<%=reserve.title%>" />
<input type="hidden" id="o_estimated_enrollment" name="o_estimated_enrollment" value="<%=reserve.estimated_enrollment%>" />
<input type="hidden" id="o_student_annotation" name="o_student_annotation" value="<%=reserve.student_annotation %>"/>
<input type="hidden" id="o_lecture_date" name="o_lecture_date" value="<%=reserve.lecture_date %>" />
<input type="hidden" id="o_required" name="o_required" value="<%=reserve.required %>" />
<input type="hidden" id="o_visibility" name="o_visibility" value="<%=reserve.visibility %>" />

<%= render partial: 'common_inputs',  locals: { reserve: @reserve, f: f} %>
<%= f.button :submit, class: "btn btn-submit" %>


<% end %>
