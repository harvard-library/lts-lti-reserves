<%# LOCALS: prev_reserves, id, lib_code %>
<%= form_tag({controller: "courses", action: "reuse"}, method: "post", class: "previous_list") do %>
<%= hidden_field_tag("id", id) %>
<%= hidden_field_tag("lib_code", lib_code) %>
<ul class="list-with-floats">
<li class="head"><%= check_box_tag("select_all_reuse") %>

<%= label_tag("select_all_reuse", "Select all previous #{prev_reserves.length} reserves") %>
 <span class="update" title="Re-use selected reserve(s)"><%=submit_tag(value="Re-use selected reserve(s)", {:class => "btn btn-submit chks_reuse", :id => "reuse_btn"}) %></span>
</li>
</ul>
<ul class="list-with-floats chk_grp" id="ids_reuse">
  <% prev_reserves.each do |reserve| %>
  <li id="<%= reserve.citation_id %>"><%= check_box_tag("cit_ids[]", reserve.citation_request_id, false, {:id => "cit_ids__#{reserve.citation_id}", :class => "chk_reuse", :title => "Select #{reserve.tip_title}"}) %>

<%= render partial: 'reserves/simple_reserve', locals: {reserve: reserve} %></li>
  <% end %>
</ul>
<% end %>
<script>checkBoxSetup("reuse")</script>
