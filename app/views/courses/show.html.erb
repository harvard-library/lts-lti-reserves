
<% if @reserves %>
<h3>Number of reserves: <%= @reserves.count %></h3>

<ul class="list-with-floats" id="reserves_ids">
<% @reserves.each do |reserve| %>
<li id="<%= reserve.citation_request_id %>">

<span class="view float-left" title="View  <%= reserve.tip_title %>"><a href="<%= reserve_path reserve%>?layout=true&viewonly=true" class="view_link float-left">&#128083;</span>

<div>
<%= render partial: 'reserves/simple_reserve', locals: {:reserve => reserve} %>
<%= render partial: 'reserves/reserve_status', locals: {:reserve => reserve} %>
</div> 

</li>
<% end %>
</ul>
<% end %>


