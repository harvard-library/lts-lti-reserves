<body class="lti-tool">
<div id="content-wrapper" class="container-fluid" role="main">
<h1>Reserves List</h1>
<h2>Number of reserves: <%= @reserves.count %></h2>
<%= form_tag({controller: "courses", action: "delete"}, method: "post", class: "reserves-list") do %>
<ul class="list-with-floats">
<li><%= check_box_tag("delete_all") %>
<%= label_tag("delete_all", "Delete all reserves") %>
</li>
<% @reserves.each do |reserve| %>
<li><%= render 'reserves/simple_reserve', :reserve => reserve %></li>
<% end %>
</ul>
<% end %>
</div>
</body>

