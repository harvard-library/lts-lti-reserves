
<% if @reserves %>
<h2>Number of reserves: <%= @reserves.count %></h2>
<%= form_tag({controller: "courses", action: "delete"}, method: "post", class: "reserves-list") do %>
<%= hidden_field_tag("id", params[:id]) %>
<ul class="list-with-floats chk_grp">
<li><%= check_box_tag("select_all") %>
<%= label_tag("select_all", "Select all reserves") %> <span class="delete float-right" title="Remove selected reserve(s)"><%=submit_tag(value="Remove selected reserve(s)", {:class => "btn btn-submit chks_submit", :id => "delete_btn", :disabled => "disabled"}) %></span>
</li>
<% @reserves.each do |reserve| %>
<li><%= render 'reserves/simple_reserve', :reserve => reserve %></li>
<% end %>
</ul>
<% end %>
<script>checkBoxSetup()</script>
<% end %>
